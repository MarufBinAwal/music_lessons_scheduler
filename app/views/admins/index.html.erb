<h1>Admins</h1>
<%= content_tag(:p, @error) %>
<%= content_tag(:a, "Create Admin", href:"/admins/new", class:"btn btn-info") %>
<ul>
    <% @admins.each do |admin| %>
        <li>
            <%= "Name: #{admin.name}" %>
            <%= "Email: #{admin.email}" %>
            <%= link_to "Edit", edit_admin_path(admin) %>
            <%= link_to "Delete", admin, method: :delete, data: { confirm: "Are you sure you want to delete this admin?" } %>
        </li>
    <% end %>
</ul>