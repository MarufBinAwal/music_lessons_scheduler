<h1>Login</h1>
<%= @errors %>
<%= form_with method:'POST', url: '/authenticate' do |form| %>
    <div>
        <%= form.label :email %>
        <%= form.text_field :email %>
    </div>
    <div>
        <%= form.label :password %>
        <%= form.password_field :password %>
    </div>
    <div>
        <%= form.label :select %>
        <select name="user">
            <option value="student">Student</option>
            <option value="instructor">Instructor</option>
            <option value="admin">Admin</option>
        </select> 
    </div>

    <%= form.submit %>
<% end %>