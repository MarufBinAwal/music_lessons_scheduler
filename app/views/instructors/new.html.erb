<%= form_with model: Instructor.new do | f | %>
    <div>
        <%= f.label :first_name %>
        <%= f.text_field :first_name, required: true %>
    </div>

    <div>
        <%= f.label :last_name %>
        <%= f.text_field :last_name, required: true%>
    </div>

     <div>
        <%= f.label :date_of_birth %>
        <%= f.date_field :date_of_birth %>
    </div>

     <div>
        <%= f.label :phone_number %>
        <%= f.phone_field :phone_number, required: true%>
    </div>

     <div>
        <%= f.label :email %>
        <%= f.email_field :email , required: true %>
    </div>

     <div>
        <%= f.label :instruments %>
        <%= f.text_field :instruments, required: true %>
    </div>

     <div>
        <%= f.label :pay_rate %>
        <%= f.text_field :pay_rate %>
    </div>

    <div>
        <%= f.label :misc_notes %>
        <%= f.text_area :misc_notes %>
    </div>

    <div>
        <%= f.label :status %>
        <%= f.select :active, [ ['Active', true, selected: true], ['Inactive', false] ] %>
    </div>

    <%= f.submit %>

<% end %>
